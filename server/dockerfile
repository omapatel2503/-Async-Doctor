# --- build stage ---
FROM node:20-slim AS build
WORKDIR /app

# Install OpenSSL (required by Prisma)
RUN apt-get update -y && \
    apt-get install -y openssl && \
    rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install --legacy-peer-deps

# Copy configuration
COPY tsconfig.json ./

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma Client (goes to node_modules/.prisma/client by default)
RUN npx prisma generate

# Copy source code
COPY src ./src

# Build TypeScript
RUN npm run build

# --- runtime stage ---
FROM node:20-slim
WORKDIR /app

# Install OpenSSL (required by Prisma at runtime)
RUN apt-get update -y && \
    apt-get install -y openssl && \
    rm -rf /var/lib/apt/lists/*

# Environment variables
ENV NODE_ENV=production
ENV PORT=4000
ENV OLLAMA_HOST=https://ollama.com
ENV ACCESS_TOKEN_EXPIRES_IN=15m
ENV REFRESH_TOKEN_EXPIRES_IN=30d
ENV REFRESH_COOKIE_NAME=rt
ENV REFRESH_COOKIE_PATH=/api/auth/refresh
ENV RATE_LIMIT_WINDOW_MS=60000
ENV RATE_LIMIT_MAX=100

# Copy package files
COPY package*.json ./

# Install production dependencies (includes Prisma)
RUN npm install --legacy-peer-deps --only=production

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma Client for production (creates in node_modules)
RUN npx prisma generate

# Copy built application from build stage
COPY --from=build /app/dist ./dist

# Create jobs directory for PVC mount
RUN mkdir -p /app/jobs

EXPOSE 4000
CMD ["node", "--enable-source-maps", "dist/server.js"]
